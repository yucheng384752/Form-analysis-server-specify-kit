# PostgreSQL 資料庫設定
DATABASE_URL=postgresql+asyncpg://app:app_secure_password@localhost:5432/form_analysis_db
POSTGRES_USER=app
POSTGRES_PASSWORD=app_secure_password
POSTGRES_DB=form_analysis_db
POSTGRES_PORT=5432

# API 伺服器設定
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
RELOAD=true
ENVIRONMENT=development

# 檔案上傳設定
MAX_UPLOAD_SIZE_MB=10
UPLOAD_TEMP_DIR=./uploads
ALLOWED_EXTENSIONS=csv,xlsx
MAX_CONCURRENT_UPLOADS=10

# CORS 設定
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# 日誌設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 安全設定
SECRET_KEY=your_secret_key_here_minimum_32_characters_required

# 資料庫連接池設定
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_POOL_RECYCLE=3600
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# 效能設定
REQUEST_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# 前端設定
VITE_API_URL=http://localhost:8000
VITE_MAX_FILE_SIZE=10485760

# pgAdmin 設定（可選）
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# 前端開發伺服器
FRONTEND_PORT=5173