# PostgreSQL 資料庫設定
# 本地開發使用 asyncpg（建議用於 FastAPI 非同步應用）
DATABASE_URL=postgresql+asyncpg://app:app_secure_password@localhost:5432/form_analysis_db
# Docker 環境使用 psycopg（同步驅動，將 localhost 改為 db）
# DATABASE_URL=postgresql+psycopg://app:app_secure_password@db:5432/form_analysis_db
POSTGRES_USER=app
POSTGRES_PASSWORD=app_secure_password
POSTGRES_DB=form_analysis_db
POSTGRES_PORT=5432

# API 伺服器設定
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
RELOAD=true
ENVIRONMENT=development

# 檔案上傳設定
MAX_UPLOAD_SIZE_MB=10
UPLOAD_TEMP_DIR=./uploads
ALLOWED_EXTENSIONS=csv,xlsx
MAX_CONCURRENT_UPLOADS=10

# CORS 設定
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# 日誌設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 安全設定
# 生產環境請使用安全的隨機字串（至少 32 字元）
# 可使用 secrets 管理器儲存生產環境的 SECRET_KEY
SECRET_KEY=your_secret_key_here_minimum_32_characters_required

# 資料庫連接池設定
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_TIMEOUT=30

# 效能設定
REQUEST_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# 前端設定
VITE_API_URL=http://localhost:8000
VITE_MAX_FILE_SIZE=10485760

# pgAdmin 設定（可選）
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# 前端開發伺服器
FRONTEND_PORT=5173