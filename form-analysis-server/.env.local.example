# Local Development Environment Configuration
# Copy this file to .env.local for local development outside Docker

# Database Configuration for Local Development
POSTGRES_USER=app
POSTGRES_PASSWORD=app_secure_password_change_in_production
POSTGRES_DB=form_analysis_db
POSTGRES_PORT=5432

# Database URL for local development (localhost instead of db service)
DATABASE_URL=postgresql+psycopg://app:app_secure_password_change_in_production@localhost:5432/form_analysis_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MAX_UPLOAD_SIZE_MB=10
UPLOAD_TEMP_DIR=./uploads

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=console
DEBUG=true
RELOAD=true

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000
VITE_MAX_FILE_SIZE=10485760

# Security Settings (development only - change in production)
SECRET_KEY=development-secret-key-32-chars-min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
ALLOWED_EXTENSIONS=csv,xlsx
MAX_CONCURRENT_UPLOADS=10

# Database Connection Pool Settings
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5
DATABASE_POOL_RECYCLE=3600
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Performance Settings
REQUEST_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# Application Environment
ENVIRONMENT=development
DEV_MODE=true