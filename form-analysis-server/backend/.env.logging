# 日誌配置檔案
# Form Analysis System Logging Configuration

# 基本設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 檔案設定
LOG_DIR=logs
MAX_LOG_SIZE=10485760  # 10MB in bytes
BACKUP_COUNT=5
LOG_ENCODING=utf-8

# 檔案名稱
APP_LOG_FILE=app.log
ERROR_LOG_FILE=error.log
ACCESS_LOG_FILE=access.log

# 控制台輸出
CONSOLE_LOG=true
CONSOLE_LEVEL=INFO
CONSOLE_FORMAT=console  # console 或 json

# 特殊設定
ENABLE_STRUCTURED_LOGGING=true
ENABLE_REQUEST_ID=true
ENABLE_PERFORMANCE_LOGGING=true

# 日誌輪轉設定
ROTATION_TYPE=size  # size 或 time
ROTATION_WHEN=midnight  # 當 ROTATION_TYPE=time 時使用
ROTATION_INTERVAL=1  # 當 ROTATION_TYPE=time 時使用

# 過濾設定
EXCLUDE_HEALTH_CHECKS=true
EXCLUDE_STATIC_FILES=true

# 安全設定
MASK_SENSITIVE_DATA=true
SENSITIVE_FIELDS=password,token,secret,key

# 監控設定
ENABLE_METRICS=true
METRICS_INTERVAL=300  # 5分鐘

# 外部日誌服務 (可選)
# EXTERNAL_LOG_SERVICE=elasticsearch
# ELASTICSEARCH_HOST=localhost:9200
# ELASTICSEARCH_INDEX=form-analysis-logs